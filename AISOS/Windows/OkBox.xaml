<Window x:Class="AISOS.Windows.OkBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AISOS.Windows"
        mc:Ignorable="d" Height="200" Width="400" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border BorderBrush="White" BorderThickness="2" CornerRadius="10" Padding="5" Background="{DynamicResource BackGradient}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TextTB" Margin="5" TextWrapping="Wrap" Text="TextBlock" FontFamily="Microsoft Sans Serif" FontSize="14" Foreground="White" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel VerticalAlignment="Bottom" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OkBut" Content="OK" Click="OkBut_Click" Height="30" Width="75" Margin="5" HorizontalContentAlignment="Right" IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
